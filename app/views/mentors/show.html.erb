<!doctype html>
<html class="no-js" lang="en">
<body>

    <!--====== NAVBAR PART STARTS ======-->
    <div class="navbar-area sticky">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg">
                        <a class="navbar-brand" href="../">
                            <img src="../assets/images/logo.svg" alt="Logo">
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                            <span class="toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                            <ul id="nav" class="navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <a class="page-scroll" href="#mentors">Experts</a>
                                </li>
                                <li class="nav-item">
                                    <a class="page-scroll" href="#bookings">Bookings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="page-scroll" href="#help">Get help</a>
                                </li>
                            </ul>
                        </div> <!-- navbar collapse -->
                        <div class="navbar-btn d-none d-sm-inline-block">
                            <a class="main-btn" data-scroll-nav="0" href="#signup">My profile</a>
                        </div>
                    </nav> <!-- navbar -->
                </div>
            </div> <!-- row -->
        </div> <!-- container -->
    </div> <!-- navbar area -->
    <!--====== NAVBAR PART ENDS ======-->

    <!--====== TITLE PART STARTS ======-->
    <div class="container">
        <div class="row mt-120">
            <div class="col-lg-12">
                <a href="../mentors"> Find an expert >> </a>
                <a> Meet <%= @mentor.first_name%> <%= @mentor.last_name%></a>
            </div>
            <div class="col-lg-12">
                <div class="section-title">
                    <h3 class="title">Meet <%= @mentor.first_name%> <%= @mentor.last_name%></h3>
                </div> <!-- section title -->
            </div>
        </div> <!-- row -->
    </div>
    <!--====== TITLE PART ENDS ======-->

    <!--====== TEAM PART START ======-->
    <section id="team" class="team-area mt-20">
        <div class="container">
            <div class="mentor-intro pt-20 pl-40 pr-40 pb-20">
                <div class="row justify-content-center align-items-top">
                    <div class="col-lg-4">
                        <div class="single-expert">
                            <div class="team-image mt-20">
                                <img src="../<%= @mentor.photo %>" alt="Team">
                            </div>
                        </div>
                    </div> <!-- photo-left -->
                    <div class="col-lg-5">
                        <div class="section-title pb-30">
                            <h2 class="title"><%= @mentor.first_name %> <%= @mentor.last_name %></h2>
                            <h6><%= @mentor.title%>, <%=@mentor.company%></h6>
                            <p><%= @mentor.location %></p>
                            <div class="star">
                                <% @mentor.avg_rating.to_i.times do %>
                                    <i class="lni-star-filled"></i>
                                <% end %>
                                <% @mentor.half_stars.times do %>
                                    <i class="lni-star-half"></i>
                                <% end %>
                                <% @mentor.blank_stars.times do %>
                                    <i class="lni-star-empty"></i>
                                <% end %>
                            </div> <!-- star -->
                            <p><%= @mentor.bookings.count%> sessions completed</p>
                            <div class="mentor-details mt-25">
                                <div class="d-flex">
                                    <h3><i class="lni-linkedin-original mr-10"></i></h3>
                                    <a href="https://<%=@mentor.linkedin%>"><%= @mentor.linkedin%></a>
                                </div>
                                <h6 class="mt-10">Ask <%= @mentor.first_name %> about:</h6>
                                <div class="d-flex flex-container">
                                    <% @mentor.skills.each do |skill| %>
                                        <p class="skills-tag mr-10"><%= skill %></p>
                                    <% end %>
                                </div> <!-- skill-tags -->
                            </div> <!-- mentor-details -->
                        </div> <!-- section-title -->
                    </div> <!-- expert-details -->
                    <div class="col-lg-3">
                        <a class="main-btn col-lg-12 mt-30" data-scroll-nav="0" href="#signup">View availability</a>
                        <a class="main-btn col-lg-12 mt-10" data-scroll-nav="0" href="#signup">Send a message</a>
                    </div> <!-- expert-buttons -->
                </div> <!-- row -->
                <div class="row section-title text-center pb-40">
                    <div class="line m-auto"></div>
                    <div class="mt-30">
                        <p><%= @mentor.description %> 6+ years of experience as a management consultant at Bain & Company developing deep strategic thinking, senior executive communication, and leadership skills across a wide array of industries, focused on technology, financial services, and consumer products. Core functional capabilities include growth strategy, new market entry, private equity due diligences, organizational transformation.</p>
                    </div>
                </div> <!-- section title -->
            </div> <!-- mentor-intro -->
        </div> <!-- container -->
    </section>
    <!--====== TEAM PART ENDS ======-->


    <!--====== TESTIMONIAL PART START ======-->

    <section id="testimonial" class="testimonial-area pt-60">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="section-title text-center pb-40">
                        <div class="line m-auto"></div>
                        <h3 class="title">User reviews</span></h3>
                    </div> <!-- section title -->
                </div>
            </div> <!-- row -->

            <div class="row testimonial-active wow fadeInUpBig" data-wow-duration="1s" data-wow-delay="0.8s">
                <div class="error-message">
                    <% if @mentor.bookings.count == 0 %>
                        <p>This expert does not have any reviews yet.</p>
                    <% end %>
                </div>
                <%@mentor.bookings.each do |booking| %>
                    <div class="col-lg-4">
                        <div class="single-testimonial">
                            <div class="testimonial-review d-flex align-items-center justify-content-between">
                                <div class="quota">
                                    <i class="lni-quotation"></i>
                                </div>
                                <div class="star">
                                    <% booking.rating.to_i.times do %>
                                        <i class="lni-star-filled"></i>
                                    <% end %>
                                    <% booking.blank_stars.times do %>
                                        <i class="lni-star-empty"></i>
                                    <% end %>
                                </div> <!-- star -->
                            </div> <!-- quotation and stars -->
                            <div class="testimonial-text">
                                <p class="text"><%= booking.review %></p>
                            </div> <!-- review-text -->
                            <div class="testimonial-author d-flex align-items-center">
                                <div class="author-image">
                                    <img class="shape" src="../assets/images/textimonial-shape.svg" alt="shape">
                                    <img class="author" src="<%= booking.mentee.photo %> " alt="author">
                                </div>
                                <div class="author-content media-body">
                                    <h6 class="holder-name"><%= booking.mentee.first_name %> <%= booking.mentee.last_name %></h6>
                                    <p class="text">CEO, SpaceX</p>
                                </div>
                            </div> <!-- reviewer -->
                        </div> <!-- single testimonial -->
                    </div>
                <% end %> <!-- booking -->
            </div> <!-- row -->
        </div> <!-- container -->
    </section>

    <!--====== TESTIMONIAL PART ENDS ======-->
